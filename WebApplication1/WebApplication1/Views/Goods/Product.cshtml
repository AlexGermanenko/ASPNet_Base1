
@{
    ViewData["Title"] = "Product";
}

<center><h1>@Model.Name</h1></center>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    .star {
        font-size: 77px;
    }

    .checked {
        color: orange;
    }
</style>

<div class="row align-items-end">
    <div class="col-lg-12">
        <div class="card" style="margin: 30px 0 0 0; height: 530px; min-width: 280px; border: solid 1px #00ced1; border-radius: 8px">
            <div class="row">
                <div class="col-lg-2" style="margin: 30px 30px 30px 30px;">
                    <img src=@Model.ImgURL class="rounded mx-auto d-block">
                </div>
                <div class="col-lg-1"></div>
                <div class="col-lg-8">

                    <h2 style="margin: 30px 30px 30px 30px;">@Model.Price.ToString("C")</h2>

                    <div id="star_rating" style="margin: 30px 30px 30px 30px;">

                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.Rate)
                            {
                                <span class="fa fa-star checked"></span>
                            }
                            else
                            {
                                <span class="fa fa-star-o checked"></span>
                            }
                        }

                        <p>Рейтинг @Model.Rate</p>

                    </div>

                    <p style="margin: 100px 30px 30px 30px;" class="card-text">@Model.Description</p>

                </div>
            </div>

            <center id="el_@Model.Id" style="margin: 50px 0 0 0;">
                <span class="fa fa-star-o checked star"></span>
                <span class="fa fa-star-o checked star"></span>
                <span class="fa fa-star-o checked star"></span>
                <span class="fa fa-star-o checked star"></span>
                <span class="fa fa-star-o checked star"></span>
            </center>

        </div>
    </div>
</div>

