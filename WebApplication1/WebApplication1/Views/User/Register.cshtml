@model WebApplication1.Models.ViewModels.RegisterModel

@{
    ViewData["Title"] = "Register";
}

    <h1>Регистрация</h1>

    <div class="row">
        <form asp-action="Register" asp-controller="User" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div class="card col-lg-3" style="margin: 30px 0 0 0; height: 400px; min-width: 280px; border: solid 1px #00ced1; border-radius: 8px">
                <center>
                    <div style="margin-top: 15px">
                        <label asp-for="Name">Введите Имя</label><br />
                        <input id="input_1" type="text" asp-for="Name" />
                        <span asp-validation-for="Name" >1</span>
                    </div>
                    <div style="margin-top: 15px">
                        <label asp-for="Email">Введите Email</label><br />
                        <input id="input_2" type="text" asp-for="Email" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div style="margin-top: 15px">
                        <label asp-for="Password">Введите пароль</label><br />
                        <input id="input_3" asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div style="margin-top: 15px">
                        <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                        <input id="input_4" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                    <div style="margin-top: 30px">
                        <input type="submit" value="Регистрация" class="btn_" />
                    </div>
                </center>
            </div>
        </form>
    </div>
